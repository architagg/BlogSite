<%- include ('partials/header.ejs') %>

<div class="ui main text container">
  <div class="ui huge header" id="fonthead">My Blogs</div>
  <br>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
        <div class="item">
          <div class="image">
            <img src="<%= blog.image %>" alt="<%= blog.title %>">
          </div>
        <div class="content">
          <a class="header" id="fonttitle" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
          <div class="meta">
            <span><%= blog.created.toDateString() %></span>
          </div>
          <div class="description">
            <p id="fontdescription"><%- blog.body.substring(0,150) %> ...</p>
          </div>
          <div class="extra">
            <a class="small ui floated secondary button" href="/blogs/<%= blog._id %>">
            Read More
            <i class="right chevron icon"></i>
            </a>
          </div>
          </div>
          </div>
      <% });%>
      </div>
      </div>
      </div>


<%- include ('partials/footer.ejs') %>
