<%- include ('partials/header.ejs') %>

<div class="ui main text container segment">
  <div id="fonttitle" class="ui huge header"><%=blog.title%></div>
  <div class="item">
    <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %>">
    <div class="content">
      <span id="time">Published on <%= blog.created.toDateString() %> :</span>
    </div>
    <div id="fontdescription"class="description">
    <p><%= blog.body %></p>
    </div>
    <a class="ui yellow button" href="/blogs/<%= blog._id %>/edit">Edit Blog</a>
    <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
      <button class="ui red button">Delete Blog</button>
    </form>
  </div>
</div>

<%- include ('partials/footer.ejs') %>
